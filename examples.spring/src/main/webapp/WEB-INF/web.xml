	</filter>
	<filter-mapping>
		<filter-name>datatables</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
