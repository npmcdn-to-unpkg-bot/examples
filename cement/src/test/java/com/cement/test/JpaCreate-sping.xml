 -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="url" value="jdbc:derby:memory:cement;create=true" />
		<property name="username" value="" />
		<property name="password" value="" />
	</bean>

	<bean
		id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
		p:dataSource-ref="dataSource"
		p:packagesToScan="com.cement.model">
	
		<property name="jpaVendorAdapter">
			<bean
				class="org.springframework.orm.jpa.vendor.EclipseLinkJpaVendorAdapter"
				p:showSql="true" />
		</property>
	
		<property name="jpaProperties">
			<props>
				<prop key="eclipselink.logging.level" >FINE</prop>
				<prop key="eclipselink.weaving">false</prop>

				<prop key="eclipselink.ddl-generation">drop-and-create-tables</prop>
				<prop key="eclipselink.create-ddl-jdbc-file-name">target/createDDL_ddlGeneration.sql</prop>
				<prop key="eclipselink.drop-ddl-jdbc-file-name">target/dropDDL_ddlGeneration.sql</prop>
				<prop key="eclipselink.ddl-generation.output-mode">sql-script</prop>
			</props>
		</property>
	</bean>
</beans>
