<?xml version="1.0" encoding="UTF-8"?>
<Context
	path="/examples.grunt"
	reloadable="true"
	antiJARLocking="true">

	<Resource
		name="jdbc/examples"
		type="javax.sql.DataSource"  auth="Container"
		maxActive="100" maxIdle="30" maxWait="10000"
		username="" password="" 
		validationQuery="SELECT date('now');"
		driverClassName="org.sqlite.JDBC"
		url="jdbc:sqlite:Databases/examples.rcp"/>
</Context>
